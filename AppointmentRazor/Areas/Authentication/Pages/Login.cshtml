@page
@model AppointmentRazor.Pages.LoginModel
@{
    ViewData["Title"] = Localizer.Text("Login");
}

<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <h3>@Localizer.Text("Login")</h3>
        <form method="post" asp-page="Login">
            <div asp-validation-summary="All" class="alert-danger"></div>
            <div class="form-group">
                <label for="username">@Localizer.Text("Username")</label>
                <input type="text"
                       asp-for="LoginForm.Username"
                       name="username"
                       class="form-control" />
                <span asp-validation-for="LoginForm.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password">@Localizer.Text("Password")</label>
                <input type="password"
                       asp-for="LoginForm.Password"
                       name="password"
                       class="form-control" />
                <span asp-validation-for="LoginForm.Password" class="text-danger"></span>
            </div>
            <span class="invalid-feedback d-block mb-2">@Model.Msg</span>
            <div class="form-group">
                <button class="btn btn-primary">@Localizer.Text("Login")</button>
            </div>
        </form>
    </div>
</div>

